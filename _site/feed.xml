&lt;pre&gt;&lt;code class=&quot;language-OC&quot;&gt;- (GzWebViewControl *)control {
    if (!_control) {
        _web = [WKWebView new];
        _control= [[GzWebViewControl alloc] initWithWebView:_web delegate:nil];
